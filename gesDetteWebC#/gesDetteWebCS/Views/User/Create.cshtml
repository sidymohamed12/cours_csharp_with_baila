@model gesDetteWebCS.Models.User

@{
}

<div class="px-5 w-1/2 mt-5 mx-auto border-2 bg-gradient-to-br from-green-400 to-blue-600 py-5">
    <h1 class="text-white mb-5 pb-3 text-4xl text-center font-bold border-bottom-3 border-b-2 border-stone-50">CREATION
        USER</h1>
    <form asp-action="Create" class="px-5 ">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mt-1"></div>
        <div class="mb-5 mx-auto ">
            <label asp-for="Login" class="text-xl font-medium text-white control-label"></label>
            <input asp-for="Login"
                class="mt-2 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm sm:text-xl" />
            <span asp-validation-for="Login" class="text-red-600 text-sm mt-1"></span>
        </div>
        <div class="mb-5 mx-auto ">
            <label asp-for="Password" class="text-xl font-medium text-white control-label"></label>
            <input asp-for="Password"
                class="mt-2 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm sm:text-xl" />
            <span asp-validation-for="Password" class="text-red-600 text-sm mt-1"></span>
        </div>
        <div class="mb-5 mx-auto ">
            <label asp-for="Role" class="text-xl font-medium text-white control-label"></label>
            <select asp-for="Role"
                class="mt-2 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm sm:text-xl ">
                <option value="">-- Select a Role --</option>
                @foreach (var role in (List<(string Value, string Text)>)ViewData["Roles"])
                {
                    <option value="@role.Value">@role.Text</option>
                }
            </select>
            <span asp-validation-for="Role" class="text-red-600 text-sm mt-1"></span>
        </div>

        <div class="mb-5 mx-auto flex justify-center">
            <input type="submit" value="Create"
                class="mt-3 mb-3 px-8 py-2 text-xl font-medium text-gray-900 rounded-lg bg-white m-auto cursor-pointer" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
